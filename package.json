{
  "name": "@shaun1705/advanced-reusable-table",
  "version": "1.0.7",
  "description": "A powerful, customizable React table component with advanced features like sorting, filtering, grouping, and inline editing",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build",
    "build:lib": "vite build --mode lib",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build:lib"
  },
  "keywords": [
    "react",
    "table",
    "datagrid",
    "component",
    "typescript",
    "sorting",
    "filtering",
    "pagination",
    "grouping",
    "editable"
  ],
  "author": "skars1705",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skars1705/advanced-reusable-table.git"
  },
  "bugs": {
    "url": "https://github.com/skars1705/advanced-reusable-table/issues"
  },
  "homepage": "https://github.com/skars1705/advanced-reusable-table#readme",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.14.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "jsdom": "^26.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^1.6.0"
  }
}
